{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "pretty": true,
    "esModuleInterop": true,
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}
